<%= provide(:title, 'Members-Only') %>

<% unless logged_in? %>
  <div class="jumbotron">
          <h1>Find out who's talking about who!</h1>
          <p class="lead">Members-Only is a trash talk community.</p>
          <%= link_to 'Sign up', signup_path, class: "btn btn-lg btn-success", role: 'button'  %>
  </div>
<% end %>
<% if logged_in? %>
  <%= render 'new_post' %>
<% end %>

 <div class="row marketing">
   <div class="col-lg-12">
      <%= will_paginate  %>

      <% @posts.each do |post| %>
        <blockquote>
          <%= content_tag :h4, post.title %>
          <%= content_tag :p, post.body %>
           <% if logged_in? %>
            <%= content_tag :footer, "#{post.author} | #{post.created_at.strftime("%d %b. %Y %H:%M")}" %>
          <% end %>
        </blockquote>
      <% end %>

            <%= will_paginate  %>

   </div>
</div>